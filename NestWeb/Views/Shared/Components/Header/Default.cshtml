@using NestWeb.Services
@inject LayoutServices services
@{
    Dictionary<string, string> setting = services.GetSettings();
    int basketItemCount = services.GetBasketItemCount();
    List < BasketItemVm > basketItems = services.GetBasketItems();
    decimal totalPrice = services.GetTotalPriceOfBasketItems();
}
 <div class="modal fade custom-modal" id="quickViewModal" tabindex="-1" aria-labelledby="quickViewModalLabel" aria-hidden="true">
